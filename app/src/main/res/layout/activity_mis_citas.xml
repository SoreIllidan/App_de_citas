<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7E0ED"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Encabezado -->
    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:src="@drawable/cat"
        android:contentDescription="@string/app_name" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_tight_semibold"
        android:text="Mis Citas"
        android:textAlignment="center"
        android:textColor="#22728E"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <!-- Filtros -->
    <LinearLayout
        android:id="@+id/boxFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E5F6F8"
        android:padding="10dp"
        android:layout_marginBottom="8dp">

        <!-- Búsqueda general con sugerencias (médico, especialidad, consultorio, lugar) -->
        <AutoCompleteTextView
            android:id="@+id/acBuscar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Buscar (médico, especialidad, lugar...)"
            android:background="#E5F6F8"
            android:padding="8dp"

            android:completionThreshold="1"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <!-- Fila: Fecha y Limpiar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFechaFiltro"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="#E5F6F8"
                android:text="Fecha (yyyy-MM-dd)"
                android:textColor="#666666" />

            <Space
                android:layout_width="6dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnElegirFecha"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Elegir"
                android:backgroundTint="#3C98B3"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="6dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Limpiar"
                android:backgroundTint="#9E9E9E"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <!-- Fila: Médico y Especialidad con sugerencias -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/acMedico"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Médico"
                android:background="#E5F6F8"
                android:padding="8dp"
                android:completionThreshold="1" />

            <Space
                android:layout_width="6dp"
                android:layout_height="0dp" />

            <AutoCompleteTextView
                android:id="@+id/acEspecialidad"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Especialidad"
                android:background="#E5F6F8"
                android:padding="8dp"
                android:completionThreshold="1" />
        </LinearLayout>
    </LinearLayout>

    <!-- Lista -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCitas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>