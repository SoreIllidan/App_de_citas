<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="12dp"
    android:background="#E5F6F8" android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvRecTitulo"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textStyle="bold" android:textColor="#111111"/>

    <TextView
        android:id="@+id/tvRecSub"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="4dp" android:textColor="#333333"/>
</LinearLayout>