<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#DFEDF0" android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvPacNombre"
        android:textStyle="bold" android:textColor="#111111"
        android:textSize="16sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvPacCorreo"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/tvFechaHora"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#111111" android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tvConsultorio"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/tvEstadoCita"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#1E88E5" android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnSubirPdf"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Subir PDF"
            android:backgroundTint="#3C98B3"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>