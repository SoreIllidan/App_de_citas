<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7E0ED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="90dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            app:srcCompat="@drawable/cat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_tight_semibold"
            android:text="Médico"
            android:textColor="#22728E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spMedicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_tight_semibold"
            android:text="Rango de fechas (L–V)"
            android:textColor="#22728E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPickFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#469DBC"
                android:fontFamily="@font/inter_tight_semibold"
                android:text="Fecha inicio"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etFechaInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:focusable="false"
                android:fontFamily="@font/inter_tight_semibold"
                android:hint="YYYY-MM-DD" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPickFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#469DBC"
                android:fontFamily="@font/inter_tight_semibold"
                android:text="Fecha fin"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etFechaFin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:focusable="false"
                android:fontFamily="@font/inter_tight_semibold"
                android:hint="YYYY-MM-DD" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_tight_semibold"
            android:text="Jornada y intervalo"
            android:textColor="#22728E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPickHoraInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#469DBC"
                android:fontFamily="@font/inter_tight_semibold"
                android:text="Hora inicio"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etHoraInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:focusable="false"
                android:fontFamily="@font/inter_tight_semibold"
                android:hint="HH:MM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPickHoraFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#469DBC"
                android:fontFamily="@font/inter_tight_semibold"
                android:text="Hora fin"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etHoraFin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:focusable="false"
                android:fontFamily="@font/inter_tight_semibold"
                android:hint="HH:MM" />
        </LinearLayout>

        <EditText
            android:id="@+id/etIntervalo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_tight_semibold"
            android:hint="Intervalo (minutos, ej. 30)"
            android:inputType="number" />

        <Button
            android:id="@+id/btnCrearHorarios"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#469DBC"
            android:fontFamily="@font/inter_tight_semibold"
            android:text="Crear horarios"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>